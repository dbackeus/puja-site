<div class="container">
  <div class="row">
    <h2>Total participants: <%= @participants.length %></h2>
    <h2>Paid participants: <%= @participants.select { |p| p.registration.paid? }.length %></h2>
    <table class="table table-striped table-sorter">
      <thead>
        <th>Name</th>
        <th>Gender</th>
        <th>Age Group</th>
        <th>Accommodation</th>
        <th>Reference</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Paid</th>
        <th>Comment</th>
        <th>Transport</th>
        <th>Country</th>
      </thead>
      <tbody>
        <% @participants.each do |participant| %>
          <% registration = participant.registration %>
          <tr>
            <td><%= participant.name %></td>
            <td><%= participant.gender %></td>
            <td><%= participant.age %></td>
            <td><%= registration.accommodation %></td>
            <td><%= link_to registration.token, registration_path(registration.token) %></td>
            <td><%= registration.email %></td>
            <td><%= registration.phone %></td>
            <td><%= registration.paid? %></td>
            <td><%= registration.comment %></td>
            <td><%= registration.transport? %></td>
            <td><%= registration.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
